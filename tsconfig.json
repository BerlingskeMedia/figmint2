  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "jsx": "react",
    "outDir": "lib"
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
