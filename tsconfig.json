{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "jsx": "react",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "lib"]
}
